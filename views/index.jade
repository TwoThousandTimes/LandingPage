extends layout

block content
  -// TITLE SECTION
  section.title-container
    div.video-overlay
      h1 
        span THE
        br 
        | Two Thousand Times
      div.loading-container
        img(src="#{cdn}/images/xxxxx.png")

    div.learn-more
       a(href="#learn")
        h3 Learn More
        img(src="#{cdn}/images/down-arrow.png")


    video#bgvid(muted)
      
  -// =========================== WHO WE ARE SECTION =============================
  section.who-we-are
    a(name="learn")
    div.content-container.who-top
      div.who-top-left(data-0="opacity: 0; margin-top:200px;", data-center="opacity: 1; margin-top:100px;", data-top="opacity: .5; margin-top:50px;")
        h2 WE ARE A PLANET OF 
          span STORYTELLERS.
        h3 CENTURIES OF IT REALLY.
      div.who-top-right(data-0="opacity: 0; margin-top:150px;", data-center="opacity: 1; margin-top:150px;", data-top="opacity: .1; margin-top:100px;")
        h3.desire THE DESIRE TO LEAVE OUR MARK,
        h3.communicate TO COMMUNICATE,
        h3.share TO SHARE.
        img(class="connect" src="#{cdn}/images/connect.png")
      div.clearfix
    
    div.content-container
      div.who-bottom-left(data-0="opacity: 0; margin-top:350px;", data-center="opacity: 1; margin-top:250px;", data-top="opacity: 0.5; margin-top:100px;")
        h3.from FROM CAVE PAINTINGS
        div.center-x
          img(class="connect" src="#{cdn}/images/bluex.png")
        h3.to TO MANIFESTOS
        div.border-lines
      div.who-bottom-right(data-0="opacity: 0; margin-top:400px;", data-center="opacity: 1; margin-top:350px;", data-top="opacity: 0.5; margin-top:250px;")
        h3.from TO CAMPFIRES
        div.center-x
          img(class="connect" src="#{cdn}/images/bluex.png")
        h3.to TO GRAFFITI
        div.border-lines
      div.clearfix
    div.silhouette-bg
    div.clearfix


  -// ============================= STORY SECTION ====================================
  section#canvas-wrapper(data-bottom-center="", data--200-top="", data-emit-events)
    div.content-container
      div.canvas-relative
        div.story-title
          h3 ALMOST NOTHING CAPTIVATES US LIKE
          h2 TELLING A STORY.
        div.story-top-right
          div.story-top-right-inner
            table
              tr
                td.story-top-right-text
                  p NO ONE CAN TELL SOMEONE ELSE'S
                    br
                    span STORY
                td.story-top-right-img
                  img(src="#{cdn}/images/book.png")
        div.story-top-left
          p What truly gets us excited are the story makers. It's the one place where...
        div.story-bottom-left
          h3.energy ENERGY
          hr
          h3 AUTHENTICITY
          h2 MEET.
        div.story-bottom-right
          p On top of that,
          h3 EVERYONE HAS A STORY
          p that we are part of making.
        div.canvas-center
        div#canvas
        
      div.bottom-message
        p.story-bottom-message
          span.highlight It turns strangers into friends. It's where we learn. It builds community.
          br
          span.highlight Until today, 
          span no one forum existed.


  -// ====================================== FINAL SECTION ===================================
  section.final-section
    div.content-container
      div.logo-container
        img.logo(src="#{cdn}/images/TTT-icon.png")
      p 
        | We are 
        img.footer-logo(src="#{cdn}/images/footer-logo.png" alt="the Two Thousand Times")
        | , and we realize that epic stories come from strangers, and there needs to be a place to share them. 
        | We have developed a community where writers and readers meet, and it is our mission to connect the world on a purely human level.
      h2 LOREM IPSUM
      form.email-form
        input(type="text", name="email", placeholder="Email")
        input(type="text", name="username", placeholder="Username")
        button(type="submit") Submit
        div.error-container
          span.error-message
        
      div.social-media-container
        img(src="#{cdn}/images/fbook.png")
        img(src="#{cdn}/images/twitter.png")


  -// =================================== FIXED FOOTER =====================================
  div.footer
    div.footer-container
      div.progress-container
        div.progress(data-0="width:0%;", data-end="width:100%;")
        div.progress-default
          div.progress-node-x
            img(src="#{cdn}/images/bluex-border.png")
          div.progress-node
          div.progress-node
          div.progress-node
          div.progress-node-last
      div.clearfix

      .signup-container
        h4 Reserve a username
        form.email-form
          input(type="text", name="email", placeholder="Email")
          input(type="text", name="username", placeholder="Username")
          button(type="submit") Submit
          div.error-container
            span.error-message
          
      .social
        img(src="#{cdn}/images/fbook.png")
        img(src="#{cdn}/images/twitter.png")

  script.
    window.cdn = '#{cdn}';
  script(src="#{cdn}/javascripts/modernizr.min.js")
  script(src="//code.jquery.com/jquery-1.11.0.min.js")
  script(src="#{cdn}/javascripts/jquery-ui.min.js")
  script(src="#{cdn}/javascripts/raphael-min.js")
  script(src="#{cdn}/javascripts/skrollr.min.js")
  script(src="#{cdn}/javascripts/index.js")
